{
	"name": "npm-scripts-starter",
	"version": "1.0.0",
	"description": "Minimal project template",
	"main": "index.js",
	"scripts": {
		"start": "npm-run-all --parallel watch:*",
		"watch:css": "onchange \"src/sass/**/*.sass\" -- npm run build:css",
		"watch:html": "onchange \"src/pug/**/*.pug\" -- npm run build:html",
		"watch:js": "onchange \"src/js/**/*.js\" -- npm run build:js",
		"watch:serve": "browser-sync --server \"dist/\" start --files \"**/*.html\" \"**/*.css\"",
		"build:html": "pug --output-style compressed -o dist/ src/pug/index.pug",
		"build:css": "mkdirp dist/css && node-sass --output-style compressed --include-path scss \"src/scss/main.scss\" \"dist/css/main.css\"",
		"build:js": "mkdirp dist/js && ncp src/js dist/js",
		"build:images": "mkdirp dist/assets && node tasks/resizeImages.js 'assets/**/*.jpg' 'dist/assets' && imagemin dist/assets/**/* --out-dir=dist/assets",
		"build": "npm-run-all --parallel build:*",
		"deploy": "gh-pages -d dist"
	},
	"author": "Irina Illustrova",
	"license": "ISC",
	"dependencies": {
		"bulma": "^0.7.5"
	},
	"devDependencies": {
		"browser-sync": "^2.26.7",
		"gh-pages": "^2.1.1",
		"html-minifier": "^4.0.0",
		"imagemin-cli": "^4.0.1",
		"ncp": "^2.0.0",
		"node-sass": "^4.12.0",
		"npm-run-all": "^4.1.5",
		"onchange": "^6.0.0",
		"pug": "^2.0.4",
		"pug-cli": "^1.0.0-alpha6",
		"sharp": "^0.21.3"
	}
}
